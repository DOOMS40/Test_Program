<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>New Project</h1>
    </div>
        

        <%= form_for :project, url: projects_path do |f|%>
          
            <% if @project && @project.errors.any? %>
              <p>
                <ul>
                  <% @project.errors.full_messages.each do |msg| %>
                  <li>
                    <%= msg %>
                  </li>
                <% end %>
                </ul>
              </p>
            <% end %>
            <table class="table table-bordered">
              <tr>
                <td class="col-md-1">
                   <%= f.label :name %>
                
                <td class="col-md-7">
                  <%= f.text_field :name, autofocus: true %>  
                </td>
                </td>
                <td class="col-md-2">
                  <%= f.submit 'Save Project'  %> 
                 
                </td>
                <td class="col-md-2">
                   <%= link_to 'Back', projects_path %>
                </td>
              </tr>
           </table>
        <% end %>
     
  </div>
</div>


